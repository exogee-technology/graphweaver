{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Xero Example",
      "request": "launch",
      "cwd": "${workspaceFolder}/src/examples/xero",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["start"],
      "type": "node",
      "env": { "LOGGING_LEVEL": "trace" }
    },
    {
      "name": "MySQL and PostgreSQL Database Example",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["start"],
      "restart": true,
      "sourceMaps": true,
      "cwd": "${workspaceFolder}/src/examples/databases"
    },
    {
      "name": "Rest Example",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["start"],
      "restart": true,
      "sourceMaps": true,
      "cwd": "${workspaceFolder}/src/examples/rest"
    },
    {
      "name": "End to End",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["dev", "--preserve-symlinks"],
      "restart": true,
      "sourceMaps": true,
      "cwd": "${workspaceFolder}/src/packages/end-to-end"
    },
    {
      "name": "End to End - App",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["start"],
      "restart": true,
      "sourceMaps": true,
      "cwd": "${workspaceFolder}/src/packages/end-to-end/app"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Admin UI in Chrome",
      "url": "http://localhost:9000",
      "webRoot": "${workspaceFolder}"
    }
  ]
}
