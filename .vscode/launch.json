{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Admin UI in Chrome",
      "url": "http://localhost:8000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Xero Example",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/src/apps/example-xero",
      "program": "${workspaceFolder}/src/apps/example-xero/node_modules/serverless/bin/serverless.js",
      "args": ["offline"],
      "env": {
        "LOGGING_LEVEL": "trace"
      },
      "preLaunchTask": "Build Xero Example"
    }
  ]
}
