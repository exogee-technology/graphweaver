{
	"name": "@exogee/graphweaver",
	"description": "Graph Weaver: Quickly build a GraphQL server using type-graphql and dataloader",
	"private": true,
	"license": "UNLICENSED",
	"repository": {
		"type": "git",
		"url": "https://github.com/exogee-technology/graphweaver.git"
	},
	"main": "packages/<ENTRY_PACKAGE>/lib/index.js",
	"scripts": {
		"clean": "./clean.sh",
		"format": "prettier --write \"*.[tj]s\" \"packages/**/*.[tj]s\"",
		"prettier": "prettier --write \"*.[tj]s\" \"packages/**/*.[tj]s\"",
		"lint": "eslint . --ext .js,.jsx,.ts,.tsx",
		"lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
		"database:rebuild-local": "dropdb graphweaver --if-exists && createdb graphweaver && pnpm migrate",
		"start": "echo \"To start an application, cd apps/[the application you want] then run pnpm start\""
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "5.17.0",
		"@typescript-eslint/parser": "5.17.0",
		"eslint": "8.12.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-prettier": "4.0.0",
		"eslint-plugin-simple-import-sort": "7.0.0",
		"jest": "26.6.3",
		"prettier": "2.2.1",
		"ts-jest": "26.4.4",
		"typescript": "^4.8.4"
	}
}
