{
	"name": "graphweaver-monorepo",
	"description": "GraphWeaver: Quickly build a GraphQL server using type-graphql and dataloader",
	"private": true,
	"license": "UNLICENSED",
	"repository": {
		"type": "git",
		"url": "https://github.com/exogee-technology/graphweaver.git"
	},
	"scripts": {
		"build": "pnpm -r build",
		"clean": "./clean.sh",
		"format": "pnpm prettier",
		"prettier": "prettier --write \"*.[tj]s\" \"packages/**/*.[tj]s\" \"examples/**/*.[tj]s\"",
		"publish": "pnpm -r build && pnpm -r publish --no-git-checks --access public",
		"publish:dry": "pnpm -r build && pnpm -r publish --no-git-checks --access public --dry-run",
		"lint": "eslint . --ext .js,.jsx,.ts,.tsx",
		"lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
		"database:rebuild-local": "dropdb graphweaver --if-exists && createdb graphweaver && pnpm migrate",
		"start": "echo \"To start an example, cd examples/[the application you want] then run pnpm start\""
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "5.49.0",
		"@typescript-eslint/parser": "5.49.0",
		"eslint": "8.32.0",
		"eslint-config-prettier": "8.6.0",
		"eslint-plugin-prettier": "4.2.1",
		"eslint-plugin-simple-import-sort": "9.0.0",
		"jest": "29.4.0",
		"prettier": "2.8.3",
		"ts-jest": "29.0.5",
		"typescript": "4.9.4"
	}
}
