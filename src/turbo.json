{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": [".env", "tsconfig.json"],
	"remoteCache": {
		"enabled": true
	},
	"tasks": {
		"build:types": {
			"dependsOn": ["^build:types"],
			"outputs": ["dist/**", "lib/**", "bin/index.js*", "tsconfig.tsbuildinfo"]
		},
		"build:js": {
			"dependsOn": ["^build:js"],
			"outputs": ["dist/**", "lib/**", "bin/index.js*", "tsconfig.tsbuildinfo"]
		},
		"package:pack": {
			"dependsOn": ["^build"],
			"outputs": [".packs/**"]
		},
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", "lib/**", "bin/index.js*", "tsconfig.tsbuildinfo"]
		}
	}
}
