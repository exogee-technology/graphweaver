{
	"compilerOptions": {
		"outDir": "./lib",
		"rootDir": "./src",
		"noUnusedLocals": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"target": "es2019",
		"module": "CommonJS",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"jsx": "react-jsx"
	},
	"exclude": ["**/node_modules/**", "**/lib/**"],
	"include": ["./src"]
}
