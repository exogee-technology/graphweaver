{
	"compilerOptions": {
		"outDir": "./lib",
		"rootDir": "./src",
		"noUnusedLocals": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"target": "es2019",
		"module": "CommonJS",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"jsx": "react-jsx",
		"types": ["vite/client", "vite-plugin-svgr/client"]
	},
	"include": ["./src"],
	"references": [
		{ "path": "../../packages/core" },
		{ "path": "../../packages/mikroorm" },
		{ "path": "../../packages/rest" },
		{ "path": "../../packages/auth" }
	]
}
