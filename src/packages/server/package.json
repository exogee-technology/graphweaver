{
	"name": "@exogee/graphweaver-server",
	"version": "2.15.1",
	"description": "Server support for @exogee/graphweaver",
	"license": "Apache-2.0",
	"scripts": {
		"build": "npm run build:js && npm run build:types",
		"build:js": "node build.js",
		"build:types": "tsc --emitDeclarationOnly",
		"build:watch": "pnpm build:js --watch",
		"package:pack": "pnpm pack",
		"prettier": "prettier --write src/**/*.ts",
		"version": "npm version --no-git-tag-version",
		"test": "vitest"
	},
	"main": "lib/index.js",
	"source": "src/index.ts",
	"directories": {
		"lib": "lib"
	},
	"files": [
		"lib"
	],
	"dependencies": {
		"@apollo/server": "4.11.3",
		"@as-integrations/aws-lambda": "3.1.0",
		"@as-integrations/fastify": "2.1.1",
		"@escape.tech/graphql-armor": "3.1.2",
		"@exogee/graphweaver": "workspace:*",
		"@exogee/logger": "workspace:*",
		"@fastify/cors": "9.0.1",
		"class-validator": "0.14.1",
		"decimal.js": "10.5.0",
		"fastify": "4.28.1",
		"graphql": "16.10.0",
		"graphql-deduplicator": "2.0.6"
	},
	"devDependencies": {
		"@escape.tech/graphql-armor-types": "0.7.0",
		"@types/graphql-deduplicator": "2.0.2",
		"esbuild": "0.25.1",
		"glob": "11.0.1",
		"vitest": "3.0.9",
		"typescript": "5.8.3"
	},
	"keywords": [
		"graphql",
		"gql",
		"headless",
		"cms",
		"postgres",
		"postgresql",
		"mysql",
		"sqlite"
	]
}
