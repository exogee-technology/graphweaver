{
	"name": "@exogee/graphweaver-server",
	"version": "0.2.7",
	"description": "Server support for @exogee/graphweaver",
	"license": "MIT",
	"scripts": {
		"build": "npm run build:js && npm run build:types",
		"build:js": "esbuild --outdir=lib --platform=node --format=cjs --sourcemap=linked `find src \\( -name '*.ts' \\)`",
		"build:types": "tsc --emitDeclarationOnly",
		"build:watch": "pnpm build:js --watch",
		"prettier": "prettier --write src/**/*.ts",
		"version": "npm version --no-git-tag-version"
	},
	"main": "lib/index.js",
	"source": "src/index.ts",
	"directories": {
		"lib": "lib"
	},
	"files": [
		"lib"
	],
	"dependencies": {
		"@apollo/server": "4.9.3",
		"@as-integrations/aws-lambda": "2.0.1",
		"@exogee/graphweaver": "workspace:*",
		"@exogee/logger": "workspace:*",
		"@graphql-tools/graphql-file-loader": "7.5.17",
		"@graphql-tools/load": "7.8.14",
		"@graphql-tools/schema": "8.5.1",
		"async-mutex": "0.3.2",
		"class-validator": "0.14.0",
		"decimal.js": "10.3.1",
		"graphql": "16.8.1",
		"graphql-deduplicator": "2.0.6",
		"type-graphql": "2.0.0-beta.2",
		"pluralize": "8.0.0"
	},
	"devDependencies": {
		"@types/graphql-deduplicator": "2.0.0",
		"esbuild": "0.15.5",
		"@types/pluralize": "0.0.29"
	},
	"keywords": [
		"graphql",
		"gql",
		"headless",
		"cms",
		"postgres",
		"postgresql",
		"mysql",
		"sqlite"
	]
}
