{
	"name": "@exogee/graphweaver-server",
	"version": "2.20.9",
	"description": "Server support for @exogee/graphweaver",
	"license": "Apache-2.0",
	"sideEffects": false,
	"scripts": {
		"build": "npm run build:js && npm run build:types",
		"build:js": "node build.js",
		"build:types": "tsc --emitDeclarationOnly",
		"build:watch": "pnpm build:js --watch",
		"package:pack": "pnpm pack",
		"prettier": "prettier --write src/**/*.ts",
		"version": "npm version --no-git-tag-version",
		"test": "vitest"
	},
	"main": "lib/index.js",
	"source": "src/index.ts",
	"directories": {
		"lib": "lib"
	},
	"files": [
		"lib"
	],
	"dependencies": {
		"@apollo/server": "5.2.0",
		"@as-integrations/aws-lambda": "4.0.1",
		"@as-integrations/azure-functions": "0.2.3",
		"@as-integrations/fastify": "3.1.0",
		"@azure/functions": "4.11.0",
		"@escape.tech/graphql-armor": "3.2.0",
		"@exogee/graphweaver": "workspace:*",
		"@exogee/logger": "workspace:*",
		"@fastify/cors": "11.1.0",
		"class-validator": "0.14.3",
		"decimal.js": "10.6.0",
		"fastify": "5.6.2",
		"graphql": "16.12.0",
		"graphql-deduplicator": "2.0.6"
	},
	"devDependencies": {
		"@escape.tech/graphql-armor-types": "0.7.0",
		"@types/graphql-deduplicator": "2.0.2",
		"esbuild": "0.27.1",
		"glob": "11.1.0",
		"typescript": "5.9.3",
		"vitest": "4.0.18"
	},
	"keywords": [
		"graphql",
		"gql",
		"headless",
		"cms",
		"postgres",
		"postgresql",
		"mysql",
		"sqlite"
	]
}
