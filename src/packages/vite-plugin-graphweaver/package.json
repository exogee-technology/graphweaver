{
	"name": "vite-plugin-graphweaver",
	"version": "0.3.0",
	"description": "A vite plugin for use with @exogee/graphweaver's admin UI",
	"license": "MIT",
	"main": "lib/index.js",
	"source": "src/index.ts",
	"directories": {
		"lib": "lib"
	},
	"files": [
		"lib"
	],
	"scripts": {
		"build": "npm run build:js && npm run build:types",
		"build:js": "esbuild --outdir=lib --platform=node --bundle src/index.ts",
		"build:types": "tsc --emitDeclarationOnly",
		"version": "npm version --no-git-tag-version"
	},
	"devDependencies": {
		"@types/node": "20.2.5",
		"esbuild": "0.15.5",
		"typescript": "5.0.2",
		"vite": "4.3.9"
	},
	"peerDependencies": {
		"vite": "4"
	},
	"dependencies": {
		"@exogee/graphweaver-config": "workspace:*"
	},
	"keywords": [
		"graphql",
		"gql",
		"headless",
		"cms",
		"postgres",
		"postgresql",
		"mysql",
		"sqlite"
	]
}
