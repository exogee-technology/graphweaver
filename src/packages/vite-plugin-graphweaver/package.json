{
	"name": "vite-plugin-graphweaver",
	"version": "0.1.2",
	"description": "A vite plugin for use with @exogee/graphweaver's admin UI",
	"license": "MIT",
	"main": "lib/index.js",
	"source": "src/index.ts",
	"directories": {
		"lib": "lib"
	},
	"files": [
		"lib"
	],
	"scripts": {
		"build": "npm run build:js && npm run build:types",
		"build:js": "esbuild --outdir=lib --platform=node --bundle src/index.ts",
		"build:types": "tsc --emitDeclarationOnly",
		"version": "npm version --no-git-tag-version"
	},
	"devDependencies": {
		"esbuild": "0.15.5",
		"typescript": "5.0.2",
		"vite": "3.2.4"
	},
	"peerDependencies": {
		"vite": "3 || 4"
	}
}
