{
	"name": "@exogee/graphweaver-scalars",
	"version": "0.1.1",
	"description": "Common scalar types for use with @exogee/graphweaver",
	"license": "MIT",
	"main": "lib/index.js",
	"source": "src/index.ts",
	"directories": {
		"lib": "lib"
	},
	"files": [
		"lib"
	],
	"scripts": {
		"build": "npm run build:js && npm run build:types",
		"build:js": "esbuild --outdir=lib --platform=node --format=cjs `find src \\( -name '*.ts' \\)`",
		"build:types": "tsc --emitDeclarationOnly",
		"test": "jest --passWithNoTests",
		"test:watch": "jest --passWithNoTests --watch",
		"version": "npm version --no-git-tag-version"
	},
	"dependencies": {
		"@exogee/graphweaver-mikroorm": "workspace:0.1.1",
		"luxon": "2.1.1"
	},
	"devDependencies": {
		"@types/jest": "26.0.23",
		"@types/luxon": "2.0.7",
		"decimal.js": "10.3.1",
		"esbuild": "0.15.5",
		"graphql": "16.6.0",
		"jest": "27.0.6",
		"ts-jest": "27.0.3",
		"typescript": "5.0.2"
	}
}
