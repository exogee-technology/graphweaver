{
	"name": "@exogee/graphweaver-scalars",
	"version": "0.2.9",
	"description": "Common scalar types for use with @exogee/graphweaver",
	"license": "MIT",
	"main": "lib/index.js",
	"source": "src/index.ts",
	"directories": {
		"lib": "lib"
	},
	"files": [
		"lib"
	],
	"scripts": {
		"build": "npm run build:js && npm run build:types",
		"build:js": "esbuild --outdir=lib --platform=node --format=cjs `find src \\( -name '*.ts' \\)`",
		"build:types": "tsc --emitDeclarationOnly",
		"version": "npm version --no-git-tag-version"
	},
	"dependencies": {
		"graphql-type-json": "0.3.2",
		"luxon": "2.5.2"
	},
	"devDependencies": {
		"@types/jest": "26.0.23",
		"@types/luxon": "2.0.7",
		"decimal.js": "10.3.1",
		"esbuild": "0.15.5",
		"graphql": "16.8.1",
		"typescript": "5.0.2"
	},
	"keywords": [
		"graphql",
		"gql",
		"headless",
		"cms",
		"postgres",
		"postgresql",
		"mysql",
		"sqlite"
	]
}
