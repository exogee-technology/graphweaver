{
	"name": "graphweaver",
	"version": "2.20.1",
	"description": "A tool for managing, running, debugging and building Graphweaver projects",
	"license": "Apache-2.0",
	"scripts": {
		"build": "npm run build:js",
		"build:js": "node build.js",
		"package:pack": "pnpm pack",
		"prettier": "prettier --write .",
		"gw": "./bin/gw-bin.js",
		"version": "npm version --no-git-tag-version"
	},
	"main": "bin/index.js",
	"source": "src/index.ts",
	"bin": {
		"graphweaver": "bin/gw-bin.js",
		"gw": "bin/gw-bin.js",
		"gw-types": "bin/gw-types.js",
		"gw-print-schema": "bin/gw-print-schema.js"
	},
	"files": [
		"bin"
	],
	"dependencies": {
		"@graphql-tools/utils": "10.9.1",
		"@exogee/graphweaver-builder": "workspace:*",
		"@exogee/graphweaver-config": "workspace:*",
		"@mikro-orm/core": "6",
		"@mikro-orm/knex": "6",
		"@mikro-orm/mssql": "6",
		"@mikro-orm/mysql": "6",
		"@mikro-orm/postgresql": "6",
		"@mikro-orm/sqlite": "6",
		"chokidar": "4.0.3",
		"esbuild": "0.25.9",
		"inquirer": "11.1.0",
		"node-semver": "1.0.0",
		"ora-classic": "5.4.2",
		"semver": "7.7.2",
		"validate-npm-package-name": "6.0.2",
		"yargs": "18.0.0"
	},
	"devDependencies": {
		"@types/inquirer": "9.0.7",
		"@types/node": "24.3.1",
		"@types/semver": "7.7.1",
		"@types/validate-npm-package-name": "4.0.2",
		"@types/yargs": "17.0.33",
		"prettier": "3.6.2",
		"typescript": "5.9.2"
	},
	"keywords": [
		"graphql",
		"gql",
		"headless",
		"cms",
		"postgres",
		"postgresql",
		"mysql",
		"sqlite"
	]
}
