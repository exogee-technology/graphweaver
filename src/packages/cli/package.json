{
	"name": "graphweaver",
	"version": "1.0.0-beta.1",
	"description": "A tool for managing, running, debugging and building Graphweaver projects",
	"license": "MIT",
	"scripts": {
		"build": "npm run build:js",
		"build:js": "node build.js",
		"package:pack": "pnpm pack",
		"prettier": "prettier --write .",
		"gw": "./bin/gw-bin.js",
		"version": "npm version --no-git-tag-version"
	},
	"main": "bin/index.js",
	"source": "src/index.ts",
	"bin": {
		"graphweaver": "bin/gw-bin.js",
		"gw": "bin/gw-bin.js",
		"gw-types": "bin/gw-types.js"
	},
	"files": [
		"bin"
	],
	"dependencies": {
		"@exogee/graphweaver": "workspace:*",
		"@exogee/graphweaver-admin-ui": "workspace:*",
		"@exogee/graphweaver-builder": "workspace:*",
		"@exogee/graphweaver-mikroorm": "workspace:*",
		"chokidar": "3.6.0",
		"esbuild": "0.21.4",
		"inquirer": "9.2.22",
		"node-semver": "1.0.0",
		"ora-classic": "5.4.2",
		"semver": "7.6.2",
		"validate-npm-package-name": "5.0.1",
		"yargs": "17.7.2"
	},
	"devDependencies": {
		"@types/inquirer": "9.0.7",
		"@types/node": "20.12.13",
		"@types/semver": "7.5.8",
		"@types/validate-npm-package-name": "4.0.2",
		"@types/yargs": "17.0.32",
		"prettier": "3.2.5"
	},
	"keywords": [
		"graphql",
		"gql",
		"headless",
		"cms",
		"postgres",
		"postgresql",
		"mysql",
		"sqlite"
	]
}
