{
	"name": "@exogee/logger",
	"version": "0.2.8",
	"description": "Common logging output for Exogee projects",
	"license": "MIT",
	"directories": {
		"lib": "lib"
	},
	"files": [
		"lib"
	],
	"main": "lib/index.js",
	"source": "src/index.ts",
	"scripts": {
		"build": "npm run build:js && npm run build:types",
		"build:js": "esbuild --outdir=lib --platform=node --format=cjs `find src \\( -name '*.ts' \\)`",
		"build:types": "tsc --emitDeclarationOnly",
		"version": "npm version --no-git-tag-version"
	},
	"dependencies": {
		"pino": "8.16.2"
	},
	"devDependencies": {
		"@types/node": "20.2.5",
		"esbuild": "0.15.5",
		"typescript": "5.0.2"
	},
	"keywords": [
		"graphql",
		"gql",
		"headless",
		"cms",
		"postgres",
		"postgresql",
		"mysql",
		"sqlite"
	]
}
