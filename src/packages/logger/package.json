{
	"name": "@exogee/logger",
	"version": "0.1.0",
	"description": "Common logging output for Exogee projects",
	"license": "MIT",
	"directories": {
		"lib": "lib"
	},
	"files": [
		"lib"
	],
	"main": "lib/index.js",
	"source": "src/index.ts",
	"scripts": {
		"build": "npm run build:js && npm run build:types",
		"build:js": "esbuild --outdir=lib --platform=node --format=cjs `find src \\( -name '*.ts' \\)`",
		"build:types": "tsc --emitDeclarationOnly"
	},
	"dependencies": {
		"bunyan": "1.8.14"
	},
	"devDependencies": {
		"@types/bunyan": "1.8.6",
		"esbuild": "0.15.5",
		"typescript": "4.5.5"
	}
}
