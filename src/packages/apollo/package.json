{
	"name": "@exogee/graphweaver-apollo",
	"version": "0.1.0-alpha.5",
	"description": "Apollo Server support for @exogee/graphweaver",
	"license": "MIT",
	"scripts": {
		"build": "npm run build:js && npm run build:types",
		"build:js": "esbuild --outdir=lib --platform=node --format=cjs `find src \\( -name '*.ts' \\)`",
		"build:types": "tsc --emitDeclarationOnly",
		"prettier": "prettier --write src/**/*.ts"
	},
	"main": "lib/index.js",
	"source": "src/index.ts",
	"directories": {
		"lib": "lib"
	},
	"files": [
		"lib"
	],
	"dependencies": {
		"@apollo/server": "4.2.2",
		"@exogee/graphweaver": "workspace:0.1.0-alpha.5",
		"@exogee/graphweaver-mikroorm": "workspace:0.1.0-alpha.5",
		"@exogee/logger": "workspace:0.1.0",
		"@graphql-tools/schema": "^8.0.0",
		"async-mutex": "0.3.2",
		"class-validator": "0.13.2",
		"decimal.js": "10.3.1",
		"graphql": "16.6.0",
		"type-graphql": "2.0.0-beta.1"
	},
	"devDependencies": {
		"esbuild": "0.15.5"
	}
}
