{
	"name": "@exogee/graphweaver-helpers",
	"version": "1.0.0",
	"main": "dist/index.js",
	"scripts": {
		"build": "pnpm build:js && pnpm build:types",
		"build:js": "esbuild src/index.ts --bundle '--external:@exogee/graphweaver' '--external:type-graphql' '--external:graphql-type-json' --platform=node --outdir=dist --format=cjs  --sourcemap=linked",
		"build:types": "tsc --build --force --emitDeclarationOnly",
		"format": "prettier --write .",
		"test": "npm run test:format && npm run test:typescript",
		"test:typescript": "tsc --noEmit",
		"test:format": "prettier --check ."
	},
	"private": true,
	"license": "UNLICENSED",
	"devDependencies": {
		"@exogee/graphweaver": "workspace:*",
		"esbuild": "0.17.18",
		"prettier": "2.8.8",
		"reflect-metadata": "0.1.13",
		"type-graphql": "2.0.0-beta.2",
		"typescript": "5.0.4",
		"graphql-type-json": "0.3.2",
		"graphql": "16.8.1"
	},
	"peerDependencies": {
		"@exogee/graphweaver": "workspace:*",
		"type-graphql": "2.0.0-beta.2",
		"graphql-type-json": "0.3.2",
		"graphql": "16.8.1"
	}
}
