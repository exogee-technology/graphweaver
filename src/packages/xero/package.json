{
	"name": "@exogee/graphweaver-xero",
	"version": "0.2.4",
	"description": "Xero backend for @exogee/graphweaver",
	"license": "MIT",
	"scripts": {
		"build": "npm run build:js && npm run build:types",
		"build:js": "esbuild --outdir=lib --platform=node --format=cjs --sourcemap=linked `find src \\( -name '*.ts' \\)`",
		"build:types": "tsc --emitDeclarationOnly",
		"prettier": "prettier --write src/**/*.ts",
		"codegen": "graphql-codegen --config ./codegen.yml",
		"version": "npm version --no-git-tag-version"
	},
	"main": "lib/index.js",
	"source": "src/index.ts",
	"directories": {
		"lib": "lib"
	},
	"files": [
		"lib"
	],
	"dependencies": {
		"@apollo/server": "4.2.2",
		"@exogee/graphweaver": "workspace:*",
		"@exogee/logger": "workspace:*",
		"class-validator": "0.14.0",
		"dataloader": "2.2.2",
		"graphql": "16.6.0",
		"xero-node": "4.30.0"
	},
	"peerDependencies": {
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"react-router-dom": "6.4.3"
	},
	"devDependencies": {
		"@types/node": "14.14.10",
		"esbuild": "0.15.5",
		"prettier": "2.8.8",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"react-router-dom": "6.4.3",
		"typescript": "5.0.2"
	}
}
