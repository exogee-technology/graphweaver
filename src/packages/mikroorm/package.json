{
	"name": "@exogee/graphweaver-mikroorm",
	"version": "1.0.0-beta.1",
	"description": "MikroORM backend for @exogee/graphweaver",
	"license": "MIT",
	"scripts": {
		"build": "npm run build:js && npm run build:types",
		"build:js": "node build.js",
		"build:types": "tsc --emitDeclarationOnly",
		"package:pack": "pnpm pack",
		"prettier": "prettier --write src/**/*.ts",
		"generate:schema": "ts-node ./src/utils/generate-db-schema.ts",
		"version": "npm version --no-git-tag-version"
	},
	"main": "lib/index.js",
	"source": "src/index.ts",
	"directories": {
		"lib": "lib"
	},
	"files": [
		"lib"
	],
	"dependencies": {
		"@apollo/server": "4.10.2",
		"@exogee/graphweaver": "workspace:*",
		"@exogee/logger": "workspace:*",
		"dataloader": "2.2.2",
		"decimal.js": "10.4.3",
		"dotenv": "16.4.5",
		"graphql": "16.8.1",
		"pluralize": "8.0.0",
		"reflect-metadata": "0.2.2"
	},
	"devDependencies": {
		"@mikro-orm/core": "6.1.12",
		"@mikro-orm/knex": "6.1.12",
		"@mikro-orm/mysql": "6.1.12",
		"@mikro-orm/postgresql": "6.1.12",
		"@mikro-orm/sqlite": "6.1.12",
		"@types/node": "20.12.12",
		"@types/pluralize": "0.0.33",
		"esbuild": "0.15.5",
		"glob": "10.3.12",
		"ts-node": "10.9.2",
		"typescript": "5.4.5"
	},
	"optionalDependencies": {
		"@mikro-orm/knex": "6.1.12",
		"@mikro-orm/mysql": "6.1.12",
		"@mikro-orm/postgresql": "6.1.12",
		"@mikro-orm/sqlite": "6.1.12"
	},
	"peerDependencies": {
		"@mikro-orm/core": "6.1.12",
		"@mikro-orm/knex": "6.1.12"
	},
	"keywords": [
		"graphql",
		"gql",
		"headless",
		"cms",
		"postgres",
		"postgresql",
		"mysql",
		"sqlite"
	],
	"pnpm": {
		"overrides": {
			"reflect-metadata": "0.2.2"
		}
	}
}
