{
	"name": "@exogee/graphweaver-mikroorm",
	"version": "0.1.0-alpha.5",
	"description": "MikroORM backend for @exogee/graphweaver",
	"license": "MIT",
	"scripts": {
		"build": "npm run build:js && npm run build:types",
		"build:js": "esbuild --outdir=lib --platform=node --format=cjs `find src \\( -name '*.ts' \\)`",
		"build:types": "tsc --emitDeclarationOnly",
		"prettier": "prettier --write src/**/*.ts",
		"generate:schema": "ts-node ./src/utils/generate-db-schema.ts",
		"test": "jest --forceExit"
	},
	"main": "lib/index.js",
	"source": "src/index.ts",
	"directories": {
		"lib": "lib"
	},
	"files": [
		"lib"
	],
	"dependencies": {
		"@exogee/graphweaver": "workspace:0.1.0-alpha.5",
		"@exogee/logger": "workspace:0.1.0",
		"apollo-server-core": "3.10.3",
		"dataloader": "2.0.0",
		"decimal.js": "10.3.1",
		"dotenv": "16.0.0",
		"graphql": "15.8.0",
		"reflect-metadata": "0.1.13"
	},
	"devDependencies": {
		"@mikro-orm/core": "5.4.2",
		"@mikro-orm/postgresql": "5.4.2",
		"@types/node": "18.11.11",
		"esbuild": "0.15.5",
		"ts-node": "10.4.0",
		"typescript": "4.5.5"
	},
	"peerDependencies": {
		"@mikro-orm/core": "5.4.2",
		"@mikro-orm/postgresql": "5.4.2"
	}
}
