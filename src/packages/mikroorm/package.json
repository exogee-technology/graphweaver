{
	"name": "@exogee/graphweaver-mikroorm",
	"version": "0.1.17",
	"description": "MikroORM backend for @exogee/graphweaver",
	"license": "MIT",
	"scripts": {
		"build": "npm run build:js && npm run build:types",
		"build:js": "esbuild --outdir=lib --platform=node --format=cjs --sourcemap=linked `find src \\( -name '*.ts' \\)`",
		"build:types": "tsc --emitDeclarationOnly",
		"prettier": "prettier --write src/**/*.ts",
		"generate:schema": "ts-node ./src/utils/generate-db-schema.ts",
		"version": "npm version --no-git-tag-version"
	},
	"main": "lib/index.js",
	"source": "src/index.ts",
	"directories": {
		"lib": "lib"
	},
	"files": [
		"lib"
	],
	"dependencies": {
		"@apollo/server": "4.2.2",
		"@exogee/graphweaver": "workspace:*",
		"@exogee/logger": "workspace:*",
		"dataloader": "2.2.2",
		"decimal.js": "10.3.1",
		"dotenv": "16.0.0",
		"graphql": "16.6.0",
		"reflect-metadata": "0.1.13"
	},
	"devDependencies": {
		"@mikro-orm/core": "5.4.2",
		"@mikro-orm/mysql": "5.4.2",
		"@mikro-orm/postgresql": "5.4.2",
		"@types/node": "18.11.11",
		"esbuild": "0.15.5",
		"ts-node": "10.4.0",
		"typescript": "5.0.2"
	},
	"optionalDependencies": {
		"@mikro-orm/mysql": "5.4.2",
		"@mikro-orm/postgresql": "5.4.2"
	},
	"peerDependencies": {
		"@mikro-orm/core": "5.4.2"
	}
}
