{
	"name": "@exogee/graphweaver-mikroorm",
	"version": "2.12.4",
	"description": "MikroORM backend for @exogee/graphweaver",
	"license": "Apache-2.0",
	"scripts": {
		"build": "npm run build:js && npm run build:types",
		"build:js": "node build.js",
		"build:types": "tsc --emitDeclarationOnly",
		"generate:schema": "tsx ./src/utils/generate-db-schema.ts",
		"package:pack": "pnpm pack",
		"prettier": "prettier --write src/**/*.ts",
		"test": "tsx scripts/check-mikro-overrides-match-installed-versions.ts && pnpm run:unit:tests",
		"test-introspection": "tsx scripts/test-introspection.ts",
		"run:unit:tests": "vitest",
		"version": "npm version --no-git-tag-version"
	},
	"main": "lib/index.js",
	"source": "src/index.ts",
	"directories": {
		"lib": "lib"
	},
	"files": [
		"lib"
	],
	"dependencies": {
		"@apollo/server": "4.11.3",
		"@aws-sdk/client-secrets-manager": "3.772.0",
		"@exogee/graphweaver": "workspace:*",
		"@exogee/graphweaver-server": "workspace:*",
		"@exogee/logger": "workspace:*",
		"dataloader": "2.2.3",
		"decimal.js": "10.5.0",
		"dotenv": "16.4.7",
		"pluralize": "8.0.0",
		"reflect-metadata": "0.2.2"
	},
	"peerDependencies": {
		"graphql": "16",
		"@mikro-orm/core": "6",
		"@mikro-orm/knex": "6"
	},
	"devDependencies": {
		"@mikro-orm/core": "6.4.11",
		"@mikro-orm/knex": "6.4.11",
		"@mikro-orm/mysql": "6.4.11",
		"@mikro-orm/postgresql": "6.4.11",
		"@mikro-orm/sqlite": "6.4.11",
		"@types/node": "22.13.10",
		"@types/pluralize": "0.0.33",
		"esbuild": "0.25.1",
		"glob": "11.0.1",
		"graphql": "16.10.0",
		"tsx": "4.19.3",
		"typescript": "5.8.2",
		"vitest": "3.0.9"
	},
	"optionalDependencies": {
		"@mikro-orm/knex": "^6.4.11",
		"@mikro-orm/mysql": "^6.4.11",
		"@mikro-orm/postgresql": "^6.4.11",
		"@mikro-orm/sqlite": "^6.4.11"
	},
	"keywords": [
		"graphql",
		"gql",
		"headless",
		"cms",
		"postgres",
		"postgresql",
		"mysql",
		"sqlite"
	]
}
