{
	"name": "@exogee/graphweaver-mikroorm",
	"version": "2.20.1",
	"description": "MikroORM backend for @exogee/graphweaver",
	"license": "Apache-2.0",
	"sideEffects": false,
	"scripts": {
		"build": "npm run build:js && npm run build:types",
		"build:js": "node build.js",
		"build:types": "tsc --emitDeclarationOnly",
		"generate:schema": "tsx ./src/utils/generate-db-schema.ts",
		"package:pack": "pnpm pack",
		"prettier": "prettier --write src/**/*.ts",
		"test": "tsx scripts/check-mikro-overrides-match-installed-versions.ts && pnpm run:unit:tests",
		"test-introspection": "tsx scripts/test-introspection.ts",
		"run:unit:tests": "vitest",
		"version": "npm version --no-git-tag-version"
	},
	"main": "lib/index.js",
	"source": "src/index.ts",
	"directories": {
		"lib": "lib"
	},
	"files": [
		"lib"
	],
	"dependencies": {
		"@apollo/server": "4.12.2",
		"@aws-sdk/client-secrets-manager": "3.888.0",
		"@exogee/graphweaver": "workspace:*",
		"@exogee/graphweaver-server": "workspace:*",
		"@exogee/logger": "workspace:*",
		"dataloader": "2.2.3",
		"decimal.js": "10.6.0",
		"dotenv": "17.2.2",
		"pluralize": "8.0.0",
		"reflect-metadata": "0.2.2"
	},
	"peerDependencies": {
		"@mikro-orm/core": "6",
		"@mikro-orm/knex": "6",
		"@mikro-orm/mssql": "6",
		"@mikro-orm/mysql": "6",
		"@mikro-orm/postgresql": "6",
		"@mikro-orm/sqlite": "6",
		"graphql": "16"
	},
	"peerDependenciesMeta": {
		"@mikro-orm/mssql": {
			"optional": true
		},
		"@mikro-orm/mysql": {
			"optional": true
		},
		"@mikro-orm/knex": {
			"optional": true
		},
		"@mikro-orm/postgresql": {
			"optional": true
		},
		"@mikro-orm/sqlite": {
			"optional": true
		}
	},
	"devDependencies": {
		"@mikro-orm/core": "6.4.16",
		"@mikro-orm/knex": "6.4.16",
		"@mikro-orm/mssql": "6.4.16",
		"@mikro-orm/mysql": "6.4.16",
		"@mikro-orm/postgresql": "6.4.16",
		"@mikro-orm/sqlite": "6.4.16",
		"@types/node": "24.3.1",
		"@types/pluralize": "0.0.33",
		"esbuild": "0.25.9",
		"glob": "11.0.3",
		"graphql": "16.11.0",
		"tsx": "4.20.5",
		"typescript": "5.9.2",
		"vitest": "3.2.4"
	},
	"keywords": [
		"graphql",
		"gql",
		"headless",
		"cms",
		"postgres",
		"postgresql",
		"mysql",
		"sqlite"
	]
}
