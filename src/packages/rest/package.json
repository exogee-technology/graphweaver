{
	"name": "@exogee/graphweaver-rest",
	"version": "0.1.2",
	"description": "RESTful backend for @exogee/graphweaver",
	"license": "MIT",
	"scripts": {
		"build": "npm run build:js && npm run build:types",
		"build:js": "esbuild --outdir=lib --platform=node --format=cjs --sourcemap=linked `find src \\( -name '*.ts' \\)`",
		"build:types": "tsc --emitDeclarationOnly",
		"prettier": "prettier --write src/**/*.ts",
		"codegen": "graphql-codegen --config ./codegen.yml",
		"version": "npm version --no-git-tag-version"
	},
	"main": "lib/index.js",
	"source": "src/index.ts",
	"directories": {
		"lib": "lib"
	},
	"files": [
		"lib"
	],
	"dependencies": {
		"@exogee/graphweaver": "workspace:0.1.2",
		"@exogee/logger": "workspace:0.1.2",
		"apollo-server-errors": "3.3.1",
		"class-validator": "0.13.2",
		"dataloader": "2.2.2",
		"dotenv": "10.0.0",
		"graphql": "16.6.0",
		"lodash": "4.17.21",
		"luxon": "2.1.1",
		"pluralize": "8.0.0",
		"prettier": "2.2.1",
		"type-graphql": "2.0.0-beta.1"
	},
	"devDependencies": {
		"@types/lodash": "4.14.192",
		"@types/luxon": "2.0.7",
		"@types/node": "14.14.10",
		"@types/pluralize": "0.0.29",
		"ts-node": "9.0.0",
		"tsc-watch": "4.2.9",
		"typescript": "5.0.2",
		"esbuild": "0.15.5"
	}
}
