{
	"name": "@exogee/graphweaver-helpers",
	"version": "0.1.9",
	"main": "lib/index.js",
	"source": "src/index.ts",
	"directories": {
		"lib": "lib"
	},
	"files": [
		"lib"
	],
	"scripts": {
		"build": "pnpm build:js && pnpm build:types",
		"build:js": "esbuild src/index.ts --bundle '--external:@exogee/graphweaver' '--external:type-graphql' --platform=node --outdir=lib --format=cjs",
		"build:types": "tsc --emitDeclarationOnly",
		"prettier": "prettier --write .",
		"test": "npm run test:format && npm run test:typescript",
		"test:typescript": "tsc --noEmit",
		"test:format": "prettier --check .",
		"version": "pnpm version --no-git-tag-version"
	},
	"private": true,
	"license": "UNLICENSED",
	"devDependencies": {
		"@exogee/graphweaver": "workspace:*",
		"esbuild": "0.17.18",
		"prettier": "2.8.8",
		"reflect-metadata": "0.1.13",
		"type-graphql": "2.0.0-beta.1",
		"typescript": "5.0.2"
	},
	"peerDependencies": {
		"@exogee/graphweaver": "workspace:*",
		"type-graphql": "2.0.0-beta.1"
	}
}
